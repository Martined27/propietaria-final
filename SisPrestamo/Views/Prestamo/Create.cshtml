@model SisPrestamo.Prestamo

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Prestamo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClienteId, "Cliente")
        </div>
        <div class="editor-field">
            @Html.DropDownList("id_cliente", String.Empty)
            @Html.ValidationMessageFor(model => model.ClienteId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Importe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Importe)
            @Html.ValidationMessageFor(model => model.Importe)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tasa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tasa)
            @Html.ValidationMessageFor(model => model.Tasa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Plazo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Plazo)
            @Html.ValidationMessageFor(model => model.Plazo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tipo_prestamo, "tipo_prestamo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("tipo_prestamo", String.Empty)
            @Html.ValidationMessageFor(model => model.tipo_prestamo)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
